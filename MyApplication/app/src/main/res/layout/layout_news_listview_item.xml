<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/tb_layout"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:background="@mipmap/ic_launcher"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/zy_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tb_layout"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/tb_layout"
        android:layout_toRightOf="@+id/tb_layout"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="摘要" />

    <TextView
        android:id="@+id/bt_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/zy_layout"
        android:layout_alignLeft="@+id/zy_layout"
        android:layout_alignStart="@+id/zy_layout"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="标题" />


</RelativeLayout>